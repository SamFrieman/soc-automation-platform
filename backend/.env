# SOC Automation Platform - Environment Variables
# Copy this to .env and fill in with your actual values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,*.example.com

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=soc_platform_db
DB_USER=soc_user
DB_PASSWORD=your-secure-password
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
ADMIN_EMAIL=admin@example.com

# Threat Intelligence APIs
VIRUSTOTAL_API_KEY=your-virustotal-api-key
ABUSEIPDB_API_KEY=your-abuseipdb-api-key

# MITRE ATT&CK Data Feed
MITRE_ATTACK_FEED_URL=https://raw.githubusercontent.com/mitre/cti/master/enterprise-attack/enterprise-attack.json

# Firewall Integration (Example - Palo Alto)
FIREWALL_API_URL=https://palo-alto.example.com/api
FIREWALL_API_KEY=your-api-key
FIREWALL_API_USER=admin

# SIEM Integration (Example - Splunk)
SPLUNK_HEC_URL=https://splunk.example.com:8088
SPLUNK_HEC_TOKEN=your-hec-token
SPLUNK_API_URL=https://splunk.example.com:8089
SPLUNK_USERNAME=admin
SPLUNK_PASSWORD=password

# ELK Stack Integration
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=password

# JWT Tokens
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=3600  # 1 hour
JWT_REFRESH_TOKEN_LIFETIME=604800  # 7 days

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/soc_platform.log

# Frontend Settings
REACT_APP_API_URL=http://localhost:8000/api
REACT_APP_WS_URL=ws://localhost:8000/ws

# Security
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CSRF_TRUSTED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Feature Flags
ENABLE_AUTO_PLAYBOOK_EXECUTION=False
ENABLE_ML_ANOMALY_DETECTION=False
ENABLE_EXTERNAL_INTEGRATIONS=False

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Celery Settings
CELERY_TASK_TIME_LIMIT=3600
CELERY_TASK_SOFT_TIME_LIMIT=3300
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

